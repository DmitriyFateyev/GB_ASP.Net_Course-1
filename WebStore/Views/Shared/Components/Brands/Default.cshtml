@model IEnumerable<BrandViewModel>

<div class="brands_products">
    <!--brands_products-->
    <h2>Brands</h2>
    <div class="brands-name">
        <ul class="nav nav-pills nav-stacked">
            @foreach (var item in Model)
            {
            <li>
                <a asp-controller="Catalog" asp-action="Index" asp-route-BrandId="@item.id">
                    <span class="pull-right">(--)</span>@item.Name
                </a>
            </li>
            }
        </ul>
    </div>
</div><!--/brands_products-->